doctype html
html
  head
    title #{title}
    meta(name='description', content='Dr. Hammersberg Vera fogszakorvos honlapja.')
    meta(name='keywords', content='fogszakorvos, fogeltávolítás, fogkőeltávolítás, fogfehérítés, fogékszer')
    meta(name='author', content='Kalman Speier / Original design by Andreas Viklund')
    meta(name='robots', content='index, follow')
    link(rel='stylesheet', type='text/css', href='/css/main.css', media='screen,projection')
    link(rel='stylesheet', type='text/css', href='/css/thickbox.css')
    link(rel='stylesheet', type='text/css', href='/css/facebox.css')
    script(type='text/javascript', src='/js/jquery.js')
    script(type='text/javascript', src='/js/thickbox.js')
    script(type='text/javascript', src='/js/facebox.js')
